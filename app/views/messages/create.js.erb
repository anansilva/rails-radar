<% publish_to @path do %>
    var id = "<%= @conversation.id %>";
    var chatbox = $("#chatbox_" + id + " .chatboxcontent");

    var user_id = "<%= @conversation.user.id %>"
    var ngo_id = "<%= @conversation.ngo.id %>"

    chatbox.append("<%= j render( partial: @message ) %>");
    chatbox.children().last().addClass("self");
    chatbox.scrollTop(chatbox[0].scrollHeight);

    <% if @sender == @receiver.class.to_s.downcase %>
      chatBox.chatWith(id);
        chatbox.children().last().removeClass("self").addClass("other");
      chatbox.scrollTop(chatbox[0].scrollHeight);
        chatBox.notify();
    <% end %>

<% end %>
