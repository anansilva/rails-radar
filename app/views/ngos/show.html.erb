<!-- #ngo title -->
<div class="ngo-show-page">
  <div class="container">

    <%= render 'shared/ngo_banner' %>
    <div class="grid-container">
      <div class="grid">
        <div class="description">
          <p><b>Who we are:</b></p>
          <p><b><%= @ngo.name %></b></p>
          <p><%= @ngo.address %></p>
          <hr class = "border-line"/>
          <p><b>Who we help:</b></p>
          <p><%= @ngo.description %></p>
        </div>

        <div class="ngo-icons">

          <p><b>What we're looking for:</b></p>
          <div class="icon-box">

            <% @ngo.types.each do |type| %>
            <div class="ngo-icon-item" class="text-center">
              <%= image_tag("icons/#{type.name.downcase}.png", :width=>50, :crop=>"fill", class: "text-center") %>
              <p id="ngo-icon-name"><%= "#{type.name.downcase}" %></p>
            </div>
            <% end %>

          </div>

          <hr class = "border-line"/>

          <p><b>Our history:</b></p>
          <p><%= @ngo.description %></p>

        </div>



        <div class="ngo-donate">
          <div class="text-center">
            <p>Make your donation here<%= current_user.nil? ? " " : "," + current_user.first_name %></p>
            <div class="row">
              <div class="donate-form form-group">
                <%= form_tag(new_ngo_donation_path(ngo_id: @ngo.id), method: :get, class: "donation-form") do  %>
                <!-- <div class="col-xs-3"> -->

                  <%#= select_tag :type_id, options_for_select(@ngo.types.map{|t| t = t.name}), prompt: "Choose the type of donation you are giving", class: "form-control" %>
                  <% @ngo.types.each do |t| %>

                  <%= radio_button_tag(:type_id, t.id) %>
                  <%= label_tag(:type_id, t.name, class: "label-type-tag") %>

                  <% end %>
                  <!-- </div> -->
                  <!-- <div class="col-xs-3"> -->
                    <%= text_field_tag :date, nil, :class => "datepicker", :value => "Drop off/Pick up Date" %>
                    <!-- </div> -->

                    <%= submit_tag "Donate", class: "btn btn-primary"%>
                    <% end %>

                  </div>
                </div>
              </div>
            </div>



            <div class="ngo-map">
              <div id="ngo-show-map"></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function initMap() {
        var map = new google.maps.Map(document.getElementById('ngo-show-map'), {
          center: {lat: 52.5206, lng: 13.4098},
          scrollwheel: false,
          zoom: 8
        });
      }
    </script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCzER7O10ZOUp7FloJzMe2r8X1GIQhgt7Q&callback=initMap">
  </script>
