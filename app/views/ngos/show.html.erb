<!-- #ngo title -->
<div class="ngo-show-page">
  <div class="container">
    <div class="banner" alt= "responsive_image" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.1) 50%), url('http://9tixb2v94ky1cp8qg3l1k4ba.wpengine.netdna-cdn.com/wp-content/uploads/2016/07/SEO-for-Non-Profit-Organizations.png'); height: 75vh; width:100%; background-position: center;">
      <div class="ngo-title-content">
        <h3 class="ngo-title"><%= @ngo.name %></h3>
        <p class="ngo-quote">"We want to help you help others."</p>
      </div>
    </div>
    <div class="grid">
      <div class="description">
        <p><b><%= @ngo.name %></b></p>
        <p><%= @ngo.address %></p>
        <p>Founded in 1989 in Lisbon, Portugal by Manuel and Ana. We want to help give food to those in need.</p>
      </div>
      <div class="ngo-map">
        <p>NGO Map LAT/LNG</p>
      </div>
      <div class="ngo-icons">
        <p><b>We are looking for:</b></p>
      </div>
      <div class="ngo-donate">
        <p>Donate Form</p>
      </div>
    </div>
  </div>
</div>
